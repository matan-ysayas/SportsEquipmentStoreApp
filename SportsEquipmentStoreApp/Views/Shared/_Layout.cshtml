<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/52c8ca7873.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/Content/style/HomePageCSS.css"/>
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Shirts", "AllShirts", "Shirts")</li>
                    <li>@Html.ActionLink("Pants", "AllPants", "Pants")</li>
                    <li>@Html.ActionLink("Shoes", "AllShoes", "Shoes")</li>
                    <li>@Html.ActionLink("Sport Equipment", "AllSportsEquipment", "SportsEquipment")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <section id="socialNetworksBox">
             <a href="https://www.facebook.com/matan.ysayas" target="_blank"><i class="fab fa-facebook"></i></a>
             <a href="https://www.instagram.com/" target="_blank"> <i class="fab fa-instagram"></i></a>
                <a href="https://www.linkedin.com/in/matan-ysayas-94b105226?lipi=urn%3Ali%3Apage%3Ad_flagship3_profile_view_base_contact_details%3BpNueZDloSDKPvZz%2BQHIPuw%3D%3D" target="_blank"><i class="fab fa-linkedin-in"></i></a>
                <a href="https://github.com/matan-ysayas" target="_blank"><i class="fab fa-github"></i></a>
            </section>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
