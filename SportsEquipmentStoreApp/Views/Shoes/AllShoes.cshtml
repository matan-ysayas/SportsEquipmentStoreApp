@using SportsEquipmentStoreApp.Models;
@{
    ViewBag.Title = "AllShoes";
}

<div id="pageContianer">
    <h2>All Shoes</h2>

    <button type="button">@Html.ActionLink("Manager view", "ManagerTable", "Shoes")</button>
    <button type="button">@Html.ActionLink("Shoes On Sale", "ShoesOnSale", "Shoes")</button>
</div>
   <div class="cardContainer">
        @foreach (Shoe shoe in Model)
        {
