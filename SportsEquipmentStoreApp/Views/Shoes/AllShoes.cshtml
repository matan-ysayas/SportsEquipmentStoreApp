           <img src="@shoe.ImageLink" />
           <h4>Type: @shoe.ShoeType</h4>
           <h4> Company:@shoe.Company</h4>
           <h4>Price:@shoe.Price</h4>
           <button>add</button>
       </div>
        }

    </div>

